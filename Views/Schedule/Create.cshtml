@model CampusFlow.Models.Schedule

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassId" class="control-label">Class</label>
                <select asp-for="ClassId" class ="form-control" asp-items="ViewBag.Class"></select>
            </div>
            <div class="form-group">
                <label asp-for="TimeSlotId" class="control-label"></label>
                <select asp-for="TimeSlotId" class ="form-control" asp-items="ViewBag.TimeSlot"></select>
            </div>
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label"></label>
                <select asp-for="DayOfWeek" class="form-control" asp-items="@Html.GetEnumSelectList<DayOfWeek>()"></select>
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeekType" class="control-label"></label>
                <select asp-for="WeekType" class="form-control" asp-items="@Html.GetEnumSelectList<WeekType>()"></select>
                <span asp-validation-for="WeekType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SemesterId" class="control-label">Semester</label>
                <select asp-for="SemesterId" class ="form-control" asp-items="ViewBag.Semester"></select>
            </div>
            <div class="form-group">
                <label asp-for="GroupId" class="control-label">Group</label>
                <select asp-for="GroupId" class ="form-control" asp-items="ViewBag.Group"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
