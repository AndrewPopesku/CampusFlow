@model IEnumerable<ScheduleViewModel>

@{
    ViewData["Title"] = "Schedule";
}

<h1>Schedule</h1>

<div class="controls">
    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <form asp-action="Index" method="get" class="d-inline-flex filter">
        <div class="form-group">
            Week:
            <select id="weektype-select" type="text" name="weektype" class="form-control">
                <option value="Odd">Odd</option>
                <option value="Even">Even</option>
            </select>
        </div>

        <div class="form-group">
            Group:
            <select type="text" name="groupSelected" class="form-control" asp-items="ViewBag.Group"></select>
        </div>
        <input type="submit" value="Update" class="btn btn-primary filter-btn" />
    </form>
</div>

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th></th>
                @foreach (var day in ViewBag.Days)
                {
                    <th>@day</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                int day = 1;
                <tr>
                    <td>
                        <center>
                            <h4>@item.TimeSlot.ClassNumber</h4>
                            @item.TimeSlot.StartTime.ToString(@"hh\:mm") - @item.TimeSlot.EndTime.ToString(@"hh\:mm")
                        </center>
                    </td>
                    @foreach (var studyClass in item.Classes.OrderBy(c => c.DayOfWeek))
                    {
                        while ((int)studyClass.DayOfWeek > day)
                        {
                            day++;
                            <td></td>
                        }
                        <td>
                            <div class="schedule-slot">
                                <div class="schedule-text">
                                    @studyClass.Subject.Name<br />
                                    <i>@studyClass.ClassType</i><br />
                                    @studyClass.Teacher.FullName<br />
                                    @studyClass.Location
                                </div>
                                <div class="buttons">
                                    <a asp-action="Edit" asp-route-id="@studyClass.Id">
                                        <img src="img/editing.png" alt="edit" width="20"/>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@studyClass.Id">
                                        <img src="img/delete.png" alt="delete" width="20"/>
                                    </a>
                                </div>
                            </div>
                        </td>
                        day++;
                    }
                    @while (day <= 5)
                    {
                        day++;
                        <td></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    var weekType = "@ViewBag.WeekType"; // get the week type from ViewBag

    // set the selected option based on the week type
    if (weekType === "Odd") {
      document.getElementById("weektype-select").value = "Odd";
    } else if (weekType === "Even") {
      document.getElementById("weektype-select").value = "Even";
    }
</script>
